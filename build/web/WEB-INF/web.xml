        <servlet-name>ViewPrescriptionServlet</servlet-name>
        <servlet-class>com.hms.servlets.ViewPrescriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hms.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePrescriptionServlet</servlet-name>
        <servlet-class>com.hms.servlets.UpdatePrescriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDoctorServlet</servlet-name>
        <url-pattern>/AddDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPatientServlet</servlet-name>
        <url-pattern>/AddPatientServlet</url-pattern>
    </servlet-mapping>
