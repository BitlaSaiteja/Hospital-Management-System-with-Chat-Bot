        <servlet-class>com.hms.servlets.AddDoctorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPatientServlet</servlet-name>
        <servlet-class>com.hms.servlets.AddPatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorLoginServlet</servlet-name>
        <servlet-class>com.hms.servlets.DoctorLoginServlet</servlet-class>
